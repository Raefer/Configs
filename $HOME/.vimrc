" theme
set t_Co=256

" syntax highlighting
syntax on

" position in code
set relativenumber
set number
set ruler

" default file encoding
set encoding=utf-8

" line wrap
set wrap

" tab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

" audo indent
set autoindent
set smartindent

" search
set incsearch
set ignorecase
set smartcase

" disable backup
set nobackup
set nowritebackup

" delay
set updatetime=144
